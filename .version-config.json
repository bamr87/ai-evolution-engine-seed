{
  "current_version": "0.3.7",
  "version_format": "semantic",
  "seed_suffix": "-seed",
  "auto_increment": {
    "patch": true,
    "minor": false,
    "major": false
  },
  "change_tracking": {
    "enabled": true,
    "log_file": "version-changes.json",
    "include_git_info": true,
    "track_file_hashes": true,
    "backup_files": false
  },
  "changelog_integration": {
    "enabled": true,
    "changelog_file": "CHANGELOG.md",
    "auto_generate_entries": true,
    "link_to_files": true,
    "include_git_refs": true
  },
  "tracked_files": {
    "core_files": [
      {
        "path": "README.md",
        "patterns": [
          {
            "type": "ascii_art",
            "pattern": "v[0-9]+\\.[0-9]+\\.[0-9]+(-seed)?",
            "line_context": "AI EVOLUTION ENGINE"
          },
          {
            "type": "badge",
            "pattern": "version-[0-9]+\\.[0-9]+\\.[0-9]+(--seed)?",
            "line_context": "[![Version]"
          },
          {
            "type": "marker_section",
            "pattern": "Generation: [0-9]+\\.[0-9]+",
            "line_context": "AI-EVOLUTION-MARKER"
          }
        ],
        "last_modified_version": "0.3.7"
      },
      {
        "path": "init_setup.sh",
        "patterns": [
          {
            "type": "header_version",
            "pattern": "Version: [0-9]+\\.[0-9]+\\.[0-9]+(-seed)?",
            "line_context": "# Version:"
          },
          {
            "type": "variable",
            "pattern": "SEED_VERSION=\"[0-9]+\\.[0-9]+\\.[0-9]+(-seed)?\"",
            "line_context": "SEED_VERSION="
          },
          {
            "type": "ascii_display",
            "pattern": "v[0-9]+\\.[0-9]+\\.[0-9]+",
            "line_context": "AI EVOLUTION ENGINE - SEED PLANTER"
          }
        ],
        "last_modified_version": "0.3.7"
      },
      {
        "path": ".github/workflows/ai_evolver.yml",
        "patterns": [
          {
            "type": "workflow_name",
            "pattern": "\\(v[0-9]+\\.[0-9]+\\.[0-9]+\\)",
            "line_context": "name: ðŸŒ± AI Evolution Growth Engine"
          }
        ],
        "last_modified_version": "0.3.7"
      },
      {
        "path": ".seed.md",
        "patterns": [
          {
            "type": "header",
            "pattern": "\\(v[0-9]+\\.[0-9]+\\.[0-9]+\\)",
            "line_context": "# ðŸŒ± AI Evolution Engine"
          },
          {
            "type": "summary_header",
            "pattern": "\\(v[0-9]+\\.[0-9]+\\.[0-9]+\\)",
            "line_context": "## ðŸŒ¿"
          }
        ],
        "last_modified_version": "0.3.7"
      },
      {
        "path": "seed_prompt.md",
        "patterns": [
          {
            "type": "header",
            "pattern": "v[0-9]+\\.[0-9]+\\.[0-9]+",
            "line_context": "# ðŸŒ± AI Evolution Engine"
          }
        ],
        "last_modified_version": "0.3.7"
      }
    ],
    "documentation_files": [
      {
        "path": "docs/README.md",
        "patterns": [
          {
            "type": "changelog_entry",
            "pattern": "v[0-9]+\\.[0-9]+\\.[0-9]+:",
            "line_context": "- v"
          }
        ],
        "last_modified_version": "0.3.7"
      }
    ],
    "script_files": [
      {
        "path": "scripts/*.sh",
        "patterns": [
          {
            "type": "header_version",
            "pattern": "# Version: [0-9]+\\.[0-9]+\\.[0-9]+",
            "line_context": "# Version:"
          }
        ],
        "scan_directory": true,
        "last_modified_version": "0.3.7"
      }
    ]
  },
